{% extends "base.html.twig" %} 

{% block content %}
    <h1>Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <th scope="row">{{ category.id }}</th>
                    <td>{{ category.name }}</td>
                    <td>
                        <a class="btn btn-danger" href="{{ url('category/delete/' ~ category.id) }}" role="button">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <hr>

    <h2>Add category</h2>

    <form method="POST" action="{{ url('category/add') }}">
        <div class="form-row">
            <div class="col">
                <input type="text" name="name" class="form-control" placeholder="Title">
            </div>
            <div class="col">
                <input type="submit" class="form-control btn-success" value="Validate">
            </div>
        </div>
    </form>
{% endblock %}