
{% extends "base.html.twig" %}

{% block content %}

  <div class="container col-lg-10 mt-3">

    <div class="row">
      <div class="header">
        <div class="title">

          <h4 class="youtube-title"><img  class="youtube-icon" src="{{ url('assets/icons/youtube/youtube.svg') }}" alt="">L'ACTU YOUTUBE</h4>
        </div>

        <form method="POST">
          <div class="btn-news">
            <button name="hashtag" id="hashtag" class="btn youtube-color " value="bitcoin">#BITCOIN</button>
            <button name="hashtag" id="hashtag" class="btn youtube-color " value="crypto">#CRYPTO</button>
            <button name="hashtag" id="hashtag" class="btn youtube-color " value="blockchain">#BLOCKCHAIN</button>
            <button name="hashtag" id="hashtag" class="btn youtube-color " value="ICO">#ICO</button>
          </form>
        </div>
      </div>


      <div class="row">

        {% for video in videos %}
          <div class="col-xl-4 col-md-6">
            <div class="card youtube-card mb-4">
              <a href="https://www.youtube.com/watch?v={{ video.id }}" target="_blank">
                <img class="card-img-top" src="{{ video.thumbnail }}" alt="youtube video">
              </a>
              <div class="card-body text-center">
                <h5 class="card-title">{{ video.title }}</h5>
                <p class="card-text youtube-date"><small>{{ video.date|date("H:i d/m/Y", "Europe/Paris") }}</small></p>
              </div>
            </div>
          </div>
        {% endfor %}

      </div>
    </div>

  {% endblock %}
