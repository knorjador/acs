
{% extends "base.html.twig" %}

{% block content %}

  <div class="container col-lg-10 mt-3">
    <div class="row">

      <form method="POST">
        <button class="btn transparent mb-3 mr-3"><img  class="youtube-icon ml-2 mr-3" src="{{ url('assets/icons/youtube/youtube.svg') }}" alt=""></button>
        <h4 style="display:inline;" class="youtube-title mr-3">L'ACTU YOUTUBE</h4>
        <button name="hashtag" id="hashtag" class="btn youtube-color mb-3 mr-2" value="bitcoin">#BITCOIN</button>
        <button name="hashtag" id="hashtag" class="btn youtube-color mb-3 mr-2" value="crypto">#CRYPTO</button>
        <button name="hashtag" id="hashtag" class="btn youtube-color mb-3 mr-2" value="blockchain">#BLOCKCHAIN</button>
        <button name="hashtag" id="hashtag" class="btn youtube-color mb-3 mr-2" value="ICO">#ICO</button>
      </form>

    </div>
    <div class="row">

      {% for video in videos %}
        <div class="col-xl-4 col-md-6">
          <div class="card youtube-card mb-4">
            <a href="https://www.youtube.com/watch?v={{ video.id }}" target="_blank">
              <img class="card-img-top" src="{{ video.thumbnail }}" alt="youtube video">
            </a>
            <div class="card-body text-center">
              <h5 class="card-title">{{ video.title }}</h5>
              <p class="card-text youtube-date"><small>{{ video.date|date("H:i d/m/Y", "Europe/Paris") }}</small></p>
            </div>
          </div>
        </div>
      {% endfor %}

    </div>
  </div>

{% endblock %}
