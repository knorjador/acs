
{% extends "base.html.twig" %}

{% block content %}

  <div class="container">
    <div class="row">

      

      {% for video in videos %}
        <div class="card col-sm-4 card-yt" style="width: 18rem;">
          <a href="https://www.youtube.com/watch?v={{ video.id }}" target="_blank">
            <img class="card-img-top" src="{{ video.thumbnail }}" alt="youtube video">
          </a>
          <div class="card-body">
            <h5 class="card-title">{{ video.title }}</h5>
            <p class="card-text"><small>{{ video.date }}</small></p>
            <p class="card-text">{{ video.description }}</p>
          </div>
        </div>
      {% endfor %}

    </div>
  </div>

{% endblock %}
